<%- include('../partials/header') %>
<h1>Edit Actor #<%= actor.actor_id %></h1>

<% if (errors && errors.length) { %>
    <div class="alert alert-danger">
        <ul class="mb-0"><% errors.forEach(e => { %><li><%= e.msg %></li><% }) %></ul>
    </div>
<% } %>

<form method="post" action="/actors/<%= actor.actor_id %>/update" class="mt-3">
    <div class="mb-3">
        <label class="form-label" for="first_name">First name</label>
        <input id="first_name" name="first_name" class="form-control" maxlength="45" required
               value="<%= (values && values.first_name) ? values.first_name : (actor.first_name || '') %>">
    </div>
    <div class="mb-3">
        <label class="form-label" for="last_name">Last name</label>
        <input id="last_name" name="last_name" class="form-control" maxlength="45" required
               value="<%= (values && values.last_name) ? values.last_name : (actor.last_name || '') %>">
    </div>
    <button class="btn btn-primary">Save changes</button>
    <a class="btn btn-secondary" href="/actors/<%= actor.actor_id %>">Cancel</a>
</form>
<%- include('../partials/footer') %>
