<%- include('../partials/header') %>

<h1 class="mb-3">Edit Actor #<%= actor.actor_id %></h1>

<% if (errors && errors.length) { %>
    <div class="alert alert-danger">
        <ul class="mb-0">
            <% errors.forEach(function(e){ %><li><%= e.msg %></li><% }) %>
        </ul>
    </div>
<% } %>

<div class="form-narrow">
    <form method="post" action="/actors/<%= actor.actor_id %>/update">
        <div class="mb-3">
            <label class="form-label" for="first_name">First name</label>
            <input id="first_name" name="first_name"
                   class="form-control <%= (errors||[]).some(e=>e.param==='first_name') ? 'is-invalid' : '' %>"
                   value="<%= (values && values.first_name) || actor.first_name || '' %>" required maxlength="45">
        </div>

        <div class="mb-3">
            <label class="form-label" for="last_name">Last name</label>
            <input id="last_name" name="last_name"
                   class="form-control <%= (errors||[]).some(e=>e.param==='last_name') ? 'is-invalid' : '' %>"
                   value="<%= (values && values.last_name) || actor.last_name || '' %>" required maxlength="45">
        </div>

        <div class="d-flex gap-2">
            <button class="btn btn-primary">Save changes</button>
            <a class="btn btn-outline-secondary" href="/actors/<%= actor.actor_id %>">Cancel</a>
        </div>
    </form>
</div>

<%- include('../partials/footer') %>
