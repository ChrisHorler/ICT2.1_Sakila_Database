<%- include('../partials/header') %>

<h1 class="mb-2">Actor #<%= actor.actor_id %></h1>
<p class="text-muted mb-4">
    <strong><%= actor.first_name %> <%= actor.last_name %></strong>
    <% if (actor.last_update) { %> Â· updated <%= actor.last_update %> <% } %>
</p>

<div class="mt-3">
    <a class="btn btn-outline-secondary" href="/actors">Back to list</a>
    <a class="btn btn-outline-primary"  href="/actors/<%= actor.actor_id %>/edit">Edit</a>

    <!-- Delete in its own form -->
    <form class="d-inline" method="post" action="/actors/<%= actor.actor_id %>/delete"
          onsubmit="return confirm('Delete this actor?');">
        <button class="btn btn-outline-danger" type="submit">Delete</button>
    </form>
</div>

<%- include('../partials/footer') %>
