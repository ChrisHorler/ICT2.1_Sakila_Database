<%- include('../partials/header') %>

<div class="d-flex align-items-center justify-content-between mb-3">
    <h1 class="page-title mb-0">Films</h1>
    <div class="text-muted"><%= total %> results</div>
</div>

<form class="row g-2 mb-3" method="get" action="/films">
    <div class="col-12 col-md">
        <input class="form-control" type="text" name="q" value="<%= q || '' %>" placeholder="Search title…">
    </div>
    <div class="col-6 col-md-auto">
        <select name="category_id" class="form-select">
            <option value="">All categories</option>
            <% (categories || []).forEach(function (c) { %>
                <option value="<%= c.category_id %>" <%= String(category_id||'') === String(c.category_id) ? 'selected' : '' %>><%= c.name %></option>
            <% }) %>
        </select>
    </div>
    <div class="col-6 col-md-auto">
        <button class="btn btn-primary w-100">Filter</button>
    </div>
</form>

<div class="row row-cols-2 row-cols-md-4 row-cols-lg-5 g-3">
    <% (items || []).forEach(function (f) { %>
        <div class="col">
            <div class="card card-film h-100">
                <a href="/films/<%= f.film_id %>">
                    <img class="poster"
                         src="<%= posterUrl(f) %>"
                         alt="<%= f.title %> poster"
                         loading="lazy"
                         data-title="<%= f.title %>"
                         data-base="/posters/"
                         data-exts="png,jpg,jpeg,webp"
                         data-try-idx="1"
                         onerror="tryPoster(this)">
                </a>
                <div class="card-body">
                    <a class="stretched-link text-decoration-none" href="/films/<%= f.film_id %>">
                        <div class="title"><%= f.title %></div>
                    </a>
                    <div class="meta"><%= f.language || '—' %> · <%= f.release_year || '—' %></div>
                </div>
            </div>
        </div>
    <% }) %>

    <% if (!items || items.length === 0) { %>
        <div class="col">
            <div class="text-muted">No films found.</div>
        </div>
    <% } %>
</div>

<%
function pageUrl(p) {
    return '/films?page=' + p
            + (q ? '&q=' + encodeURIComponent(q) : '')
            + (category_id ? '&category_id=' + encodeURIComponent(category_id) : '');
}
var pageUrlTemplate = '/films?page=__p__'
        + (q ? '&q=' + encodeURIComponent(q) : '')
        + (category_id ? '&category_id=' + encodeURIComponent(category_id) : '');
%>
<%- include('../partials/pager', { pager, pageUrl, pageUrlTemplate }) %>

<%- include('../partials/footer') %>
