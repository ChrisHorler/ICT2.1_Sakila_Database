<%- include('../partials/header') %>

<div class="row g-4">
    <div class="col-12 col-md-4 col-lg-3">
        <img class="img-fluid rounded border"
             src="<%= posterUrl(film) %>"
             alt="<%= film.title %> poster"
             loading="lazy"
             data-title="<%= film.title %>"
             data-base="/posters/"
             data-exts="png,jpg,jpeg,webp"
             data-try-idx="1"
             onerror="tryPoster(this)">
    </div>

    <div class="col-12 col-md-8 col-lg-9">
        <h1 class="page-title"><%= film.title %></h1>
        <p class="text-muted mb-3">
            <%= film.language || '—' %>
            <% if (film.release_year) { %> · <%= film.release_year %> <% } %>
        </p>

        <% if (film.description) { %>
            <p style="max-width:65ch"><%= film.description %></p>
        <% } %>

        <div class="d-flex gap-2 mt-3">
            <a class="btn btn-outline-secondary" href="/films">Back to list</a>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>
