<%- include('../partials/header') %>

<h1 class="mb-2"><%= data.film.title %></h1>
<p class="text-muted mb-3">
    <%= data.film.release_year %> · <%= data.film.language %> · <%= data.film.rating %> · <%= data.film.length %> min
</p>

<% if (data.film.description) { %>
    <p class="mb-4"><%= data.film.description %></p>
<% } %>

<div class="row g-4">
    <div class="col-md-6">
        <h2 class="h5">Categories</h2>
        <ul class="mb-0">
            <% (data.categories || []).forEach(c => { %>
                <li><%= c.name %></li>
            <% }) %>
            <% if ((data.categories || []).length === 0) { %><li class="text-muted">None</li><% } %>
        </ul>
    </div>
    <div class="col-md-6">
        <h2 class="h5">Actors</h2>
        <ul class="mb-0">
            <% (data.actors || []).forEach(a => { %>
                <li><%= a.last_name %>, <%= a.first_name %></li>
            <% }) %>
            <% if ((data.actors || []).length === 0) { %><li class="text-muted">None</li><% } %>
        </ul>
    </div>
</div>

<div class="mt-4">
    <a class="btn btn-outline-secondary" href="/films">Back to list</a>
</div>

<%- include('../partials/footer') %>
