<%- include('partials/header') %>

<style>
    /* small hero polish */
    .hero {
        background: radial-gradient(1200px 300px at 20% 0%, rgba(255,255,255,.05), rgba(0,0,0,0)),
        linear-gradient(180deg, #0b1b2a, #081522 60%, #07111b);
        border-radius: 18px;
        padding: 3rem 2rem;
        box-shadow: 0 10px 30px rgba(0,0,0,.25);
    }
    .hero h1 { letter-spacing: .5px; }
    .stat-card { background: rgba(255,255,255,.04); border: 1px solid rgba(255,255,255,.08); }
    .poster-fit { aspect-ratio: 2/3; object-fit: cover; }
    .title-clamp {
        display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden;
    }
</style>

<div class="container container-narrow my-4">

    <!-- HERO -->
    <section class="hero mb-4">
        <div class="d-flex flex-wrap align-items-center justify-content-between gap-3">
            <div class="flex-grow-1">
                <h1 class="mb-2">Welcome to <span class="text-warning">Sakila Video</span></h1>
                <p class="text-secondary mb-3">
                    Browse our classic catalogue from the golden age of rentals. Search by title, filter by category,
                    and view cast & details. Enjoy a fast, clean, and modern experience.
                </p>

                <form class="row g-2" method="get" action="/films">
                    <div class="col-sm-8 col-md-6">
                        <input type="text" class="form-control" name="q" placeholder="Search films…">
                    </div>
                    <div class="col-auto">
                        <button class="btn btn-primary">Search</button>
                    </div>
                    <div class="col-auto">
                        <a class="btn btn-outline-light" href="/films">Browse all films</a>
                    </div>
                </form>
            </div>

            <div class="text-end small text-secondary">
                <% if (currentUser) { %>
                    Logged in as <strong><%= currentUser.username %></strong>
                    <% if (currentUser.role) { %> · role: <span class="badge bg-info-subtle text-info-emphasis"><%= currentUser.role %></span><% } %>
                <% } else { %>
                    <a href="/auth/login" class="btn btn-sm btn-outline-light">Sign in</a>
                <% } %>
            </div>
        </div>
    </section>

    <!-- STATS -->
    <section class="mb-4">
        <div class="row g-3">
            <div class="col-6 col-md-3">
                <div class="stat-card rounded-3 p-3 text-center">
                    <div class="fs-5">Films</div>
                    <div class="display-6"><%= stats.films %></div>
                </div>
            </div>
            <div class="col-6 col-md-3">
                <div class="stat-card rounded-3 p-3 text-center">
                    <div class="fs-5">Actors</div>
                    <div class="display-6"><%= stats.actors %></div>
                </div>
            </div>
            <div class="col-6 col-md-3">
                <div class="stat-card rounded-3 p-3 text-center">
                    <div class="fs-5">Customers</div>
                    <div class="display-6"><%= stats.customers %></div>
                </div>
            </div>
            <div class="col-6 col-md-3">
                <div class="stat-card rounded-3 p-3 text-center">
                    <div class="fs-5">Rentals</div>
                    <div class="display-6"><%= stats.rentals %></div>
                </div>
            </div>
        </div>
    </section>

    <!-- FEATURED -->
    <section>
        <div class="d-flex align-items-baseline justify-content-between mb-2">
            <h2 class="h5 mb-0">Featured this visit</h2>
            <a class="small" href="/films">See all</a>
        </div>

        <div class="row g-3">
            <% featured.forEach(function(f) {
                const fname = (f.title || '')
                        .toUpperCase()
                        .replace(/[^A-Z0-9]+/g, '_')
                        .replace(/^_+|_+$/g,'');
                const poster = `/posters/${fname}.png`;
            %>
            <div class="col-6 col-md-4 col-lg-2">
                <a href="/films/<%= f.film_id %>" class="card bg-dark border-0 h-100 film-card text-decoration-none">
                    <img loading="lazy" src="<%= poster %>" class="card-img-top poster-fit rounded-top" alt="<%= f.title %>" onerror="this.src='/posters/placeholder.png'">
                    <div class="card-body p-2">
                        <div class="title-clamp fw-semibold small text-light"><%= f.title %></div>
                        <div class="small text-secondary"><%= f.language %> · <%= f.release_year %></div>
                    </div>
                </a>
            </div>
            <% }) %>
        </div>
    </section>

</div>

<%- include('partials/footer') %>
