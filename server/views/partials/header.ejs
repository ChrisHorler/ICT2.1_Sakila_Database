<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title><%= typeof title !== 'undefined' ? title + ' · ' : '' %>Sakila Video</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS (must be before your styles) -->
    <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
            rel="stylesheet"
            crossorigin="anonymous">

    <!-- Your theme overrides -->
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-dark bb sticky-top">
    <div class="container">
        <a class="navbar-brand" href="/">
            Sakila<span class="ticket">VIDEO</span>
        </a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navMain" aria-controls="navMain" aria-expanded="false" aria-label="Toggle nav">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navMain">
            <ul class="navbar-nav me-3">
                <li class="nav-item"><a class="nav-link <%= nav && nav.current === '/' ? 'active' : '' %>" href="/">Home</a></li>
                <li class="nav-item"><a class="nav-link <%= nav && nav.current.startsWith('/films') ? 'active' : '' %>" href="/films">Films</a></li>
                <li class="nav-item"><a class="nav-link <%= nav && nav.current.startsWith('/actors') ? 'active' : '' %>" href="/actors">Actors</a></li>
                <li class="nav-item"><a class="nav-link <%= nav && nav.current.startsWith('/about') ? 'active' : '' %>" href="/about">About</a></li>
            </ul>

            <form class="d-flex ms-auto navbar-search" role="search" action="/films" method="get">
                <input class="form-control form-control-sm me-2" name="q" type="search" placeholder="Search films…" aria-label="Search">
                <button class="btn btn-sm btn-primary" type="submit">Search</button>
            </form>

            <ul class="navbar-nav ms-3">
                <% if (currentUser) { %>
                    <%const __u = (locals.user || locals.currentUser || req?.user || {});
                    const __initial = (__u.username || __u.name || 'U')[0].toUpperCase();
                    %>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle d-flex align-items-center gap-2"
                           href="#" id="userMenu" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <span class="avatar avatar-xs bg-accent-2 text-dark fw-bold"><%= __initial %></span>
                            <span class="username text-truncate" style="max-width: 140px;"><%= __u.username || __u.name %></span>
                        </a>

                        <div class="dropdown-menu dropdown-menu-end user-menu shadow" aria-labelledby="userMenu">
                            <div class="px-3 pt-2 pb-1 small text-muted">
                                Signed in as <strong><%= __u.username || __u.name %></strong>
                            </div>

                            <% if (__u.role) { %>
                                <div class="px-3 pb-2">
                                    <span class="badge role-pill">Role: <%= __u.role %></span>
                                </div>
                            <% } %>

                            <div class="dropdown-divider"></div>

                            <form class="px-2 pb-2" method="post" action="/auth/logout">
                                <button class="btn btn-outline-light w-100">Logout</button>
                            </form>
                        </div>
                    </li>

            <% } else { %>
                    <li class="nav-item"><a class="nav-link" href="/auth/login">Login</a></li>
                <% } %>
            </ul>
        </div>
    </div>
</nav>

<main class="container container-narrow py-4">
