<!doctype html>
<html lang="nl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title><%= title %> Â· Sakila</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="/css/styles.css" rel="stylesheet" />
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-light bg-light mb-3">
    <div class="container">
        <a class="navbar-brand" href="/">Sakila</a>
        <div class="navbar-nav">
            <a class="nav-link <%= (typeof nav!=='undefined' && nav.current && nav.current.startsWith('/films')) ? 'active' : '' %>" href="/films">Home</a>
            <a class="nav-link <%= (typeof nav!=='undefined' && nav.current && nav.current.startsWith('/actors')) ? 'active' : '' %>" href="/actors">Actors</a>
            <a class="nav-link <%= (typeof nav!=='undefined' && nav.current && nav.current.startsWith('/about')) ? 'active' : '' %>" href="/about">About</a>
        </div>
    </div>

    <div class="navbar-nav ms-auto">
        <% if (currentUser) { %>
            <span class="navbar-text me-2">Hi, <strong><%= currentUser.username %></strong> (<%= currentUser.role %>)</span>
            <form method="post" action="/auth/logout" class="d-inline">
                <button class="btn btn-sm btn-outline-secondary">Logout</button>
            </form>
        <% } else { %>
            <a class="nav-link" href="/auth/login">Login</a>
        <% } %>
    </div>
</nav>
<main class="container my-4">
